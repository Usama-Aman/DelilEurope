<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="fill_parent"
        android:layout_height="56dp"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_marginRight="@dimen/_8sdp"
        android:elevation="@dimen/_5sdp"
        android:minHeight="?attr/actionBarSize">

        <ImageView
            android:id="@+id/btn_toolbar_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:background="?selectableItemBackground"
            android:padding="8dp"
            android:src="@drawable/ic_menu"
            android:tint="@color/white"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/roboto_semibold"
            android:textColor="@color/white"
            android:textSize="@dimen/_18sdp"
            android:visibility="visible" />

        <EditText
            android:id="@+id/etSearch"
            style="@style/HintText"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/_30sdp"
            android:layout_centerInParent="true"
            android:layout_toStartOf="@+id/btn_toolbar_right"
            android:layout_toLeftOf="@+id/btn_toolbar_right"
            android:layout_toEndOf="@+id/btn_toolbar_back"
            android:layout_toRightOf="@+id/btn_toolbar_back"
            android:background="@android:color/transparent"
            android:cursorVisible="true"
            android:drawablePadding="@dimen/_10sdp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:fontFamily="@font/roboto_regular"
            android:hint="@string/search_message"
            android:maxLength="30"
            android:paddingStart="@dimen/_38sdp"
            android:paddingLeft="@dimen/_38sdp"
            android:singleLine="true"
            android:textAlignment="viewStart"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/_15sdp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/btn_toolbar_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="end|end"
            android:background="?selectableItemBackground"
            android:padding="8dp"
            android:src="@drawable/ic_add_user_small"
            android:visibility="visible" />


    </RelativeLayout>
</LinearLayout>