<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorGreyBG"
    android:orientation="vertical">

    <LinearLayout

        android:id="@+id/linUser1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorGreyBG"
        android:orientation="horizontal"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@color/colorGreyBG"
            android:layout_marginStart="@dimen/_10sdp">

            <ImageView
                android:id="@+id/imgUserProfile"
                android:layout_width="@dimen/_45sdp"
                android:layout_height="@dimen/_55sdp"
                android:scaleType="center"
                android:layout_margin="@dimen/_1sdp"
                android:src="@drawable/user_placeholder" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_54sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@drawable/left"
            android:orientation="vertical"
            android:paddingLeft="@dimen/_15sdp"
            android:paddingTop="@dimen/_10sdp"
            android:paddingRight="@dimen/_10sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:paddingStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_54sdp">

            <TextView
                android:id="@+id/tvMessage"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_5sdp"
                android:fontFamily="@font/roboto_regular"
                android:text="He is good boy , he lives in lahore"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sdp"
                android:layout_marginEnd="@dimen/_5sdp" />

            <TextView
                android:id="@+id/tvDateTime"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:fontFamily="@font/roboto_regular"
                android:text="He is good boy , he lives in lahore"
                android:textColor="@color/white"
                android:textSize="@dimen/_6sdp"
                android:layout_marginEnd="@dimen/_5sdp" />
        </LinearLayout>
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/linuser2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:visibility="visible">


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_54sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_toLeftOf="@+id/cardProfile2"
            android:background="@drawable/right"
            android:orientation="vertical"
            android:paddingLeft="@dimen/_15sdp"
            android:paddingTop="@dimen/_10sdp"
            android:paddingRight="@dimen/_10sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:layout_toStartOf="@+id/cardProfile2"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginStart="@dimen/_54sdp"
            android:paddingStart="@dimen/_15sdp">

            <TextView
                android:id="@+id/tvMessage2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_5sdp"
                android:textAlignment="viewStart"
                android:fontFamily="@font/roboto_regular"
                android:text="He is good boy , he lives in lahore"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_14sdp"
                android:layout_marginEnd="@dimen/_5sdp" />

            <TextView
                android:id="@+id/tvDateTime2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:textAlignment="viewStart"
                android:layout_marginRight="@dimen/_5sdp"
                android:fontFamily="@font/roboto_regular"
                android:text="He is good boy , he lives in lahore"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_6sdp"
                android:layout_marginEnd="@dimen/_5sdp" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/cardProfile2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@color/colorImageBg"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_alignParentEnd="true">

            <ImageView
                android:id="@+id/imgUserProfile2"
                android:layout_width="@dimen/_45sdp"
                android:layout_height="@dimen/_55sdp"
                android:scaleType="center"
                android:layout_margin="@dimen/_1sdp"
                android:src="@drawable/user_placeholder" />
        </RelativeLayout>

        <TextView
            android:id="@+id/item_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:textAppearance="?attr/textAppearanceListItem"
            android:visibility="gone" />

        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:textAppearance="?attr/textAppearanceListItem"
            android:visibility="gone" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>